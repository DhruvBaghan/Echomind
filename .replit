modules = ["web", "nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
FLASK_APP = "backend.app"
FLASK_ENV = "development"
FLASK_DEBUG = "True"
SECRET_KEY = "dev-secret-key-change-in-production-replit-2024"
PORT = "5000"
HOST = "0.0.0.0"
DATABASE_URL = "sqlite:///echomind.db"
ELECTRICITY_COST_PER_KWH = "0.12"
WATER_COST_PER_LITER = "0.002"
DEFAULT_PREDICTION_PERIODS = "24"
MAX_PREDICTION_PERIODS = "168"
MODEL_CONFIDENCE_INTERVAL = "0.95"
LOG_LEVEL = "INFO"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m flask run --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43971
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "--workers=4", "wsgi:app"]
