# ============================================
# EchoMind - Environment Configuration
# ============================================

# ----- Flask Configuration -----
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
PORT=5000
HOST=0.0.0.0

# ----- Database Configuration -----
# Development (SQLite)
DATABASE_URL=sqlite:///echomind.db

# Production (PostgreSQL) - uncomment when deploying
# DATABASE_URL=postgresql://user:password@localhost:5432/echomind

# ----- Cost Settings (USD) -----
ELECTRICITY_COST_PER_KWH=0.12
WATER_COST_PER_LITER=0.002

# ----- Prediction Settings -----
DEFAULT_PREDICTION_PERIODS=24
MAX_PREDICTION_PERIODS=168
MODEL_CONFIDENCE_INTERVAL=0.95

# ----- Model Paths -----
ELECTRICITY_MODEL_PATH=ml_models/electricity_model.pkl
WATER_MODEL_PATH=ml_models/water_model.pkl

# ----- Logging -----
LOG_LEVEL=INFO
LOG_FILE=logs/echomind.log

# ----- API Rate Limiting -----
RATE_LIMIT_PER_MINUTE=60

# ----- Session Configuration -----
SESSION_LIFETIME_HOURS=24